{
  "extends": "@fxhash/tsconfig/tsconfig.react.json",
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": "src",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist",
    "allowJs": false,
    "declaration": true,
    "isolatedDeclarations": true
  }
}
