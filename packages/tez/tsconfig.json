{
  "extends": "@fxhash/tsconfig/base",
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    // FIXME: resolve type errors when removing the following lines
    "strict": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false
  }
}
