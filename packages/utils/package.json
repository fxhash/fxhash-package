{
  "name": "@fxhash/utils",
  "description": "A general-purpose nodejs/browser compatible utility package related to fxhash applications.",
  "version": "0.0.2",
  "author": "fxhash",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/fxhash/fxhash-package"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "dependencies": {
    "@fxhash/shared": "workspace:*"
  },
  "devDependencies": {
    "@fxhash/eslint-config": "workspace:*",
    "@fxhash/tsconfig": "workspace:*",
    "tsup": "8.0.1",
    "typescript": "5.3.3",
    "vitest": "0.34.6"
  }
}
