    "@types/ejs": "^3.1.2",
    "@types/inquirer": "^9.0.3",
    "@types/inquirer-fuzzy-path": "^2.3.6",
    "chokidar": "^3.5.3",
    "tsc-alias": "1.8.5",
    "typescript": "4.9.5"
  }
