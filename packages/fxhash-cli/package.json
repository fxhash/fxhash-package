{
  "name": "@fxhash/fxhash-cli",
  "private": true,
  "version": "0.0.1",
  "author": "fxhash",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fxhash/fxhash-package"
  },
  "main": "src/index.js",
  "bin": {
    "create-fxhash-project": "./dist/create-project.js",
    "update-fxhash-snippet": "./dist/update-snippet.js"
  },
  "dependencies": {
    "@fxhash/fxhash-snippet": "*",
    "ejs": "3.1.9",
    "inquirer": "9.2.8",
    "inquirer-fuzzy-path": "2.3.0"
  },
  "devDependencies": {
    "@types/ejs": "3.1.2",
    "@types/inquirer": "9.0.3",
    "@types/inquirer-fuzzy-path": "2.3.6",
    "chokidar": "3.5.3",
    "tsc-alias": "1.8.5",
    "typescript": "4.9.5"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "copy-static": "cp -rf src/static dist/static",
    "build": "npm run clean && tsc --declaration && tsc-alias && npm run copy-static",
    "dev": "npm run clean && tsc && (concurrently \"tsc -w --declaration\" \"tsc-alias -w\" \"node ./copy-static\")",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}