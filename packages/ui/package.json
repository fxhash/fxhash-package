{
  "name": "@fxhash/ui",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsdown src/index.ts --format esm,cjs --dts --clean",
    "dev": "tsdown src/index.ts --format esm,cjs --dts --watch",
    "build:css": "postcss src/styles/globals.css -o dist/styles/globals.css --env production",
    "build:all": "npm run build && npm run build:css"
  },
  "dependencies": {
    "@radix-ui/react-aspect-ratio": "1.1.7",
    "@radix-ui/react-collapsible": "1.1.11",
    "@radix-ui/react-label": "2.1.7",
    "@radix-ui/react-slot": "1.2.3",
    "@radix-ui/react-tabs": "1.1.12",
    "@tabler/icons-react": "3.31.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "next-themes": "0.4.6",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "sonner": "2.0.6",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@fxhash/eslint-config": "workspace:*",
    "@fxhash/tsconfig": "workspace:*",
    "@tailwindcss/postcss": "4.1.11",
    "@tailwindcss/typography": "0.5.16",
    "@types/node": "22.14.1",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "postcss-cli": "11.0.1",
    "tailwindcss": "4.1.11",
    "tailwindcss-animate": "1.0.7",
    "tsdown": "0.13.0",
    "typescript": "5.8.2"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./src/styles/globals.css"
  }
}
